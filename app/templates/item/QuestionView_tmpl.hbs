{{!empty QuestionviewTmpl template}}

<legend>Pregunta {{question_number}}</legend>

<div class="form-group">
  <label for="type" class="col-sm-2 control-label">Tipo de pregunta</label>
  <div class="col-sm-10">
    <select name="type" id="type" form="addQuiz" class="form-control" required>
      {{#each q_types}}
        <option value="{{id}}" {{#compare id '==' ../type.id}}selected="selected"{{/compare}}>{{description}}</option>
      {{/each}}
    </select>
  </div>
</div>

<div class="form-group">
  <label for="score" class="col-sm-2 control-label">Puntuación de la pregunta</label>
  <div class="col-sm-10">
    <input type="number" class="form-control" name="score" required value="{{score}}">
  </div>
</div>

<div class="form-group">
  <label for="description" class="col-sm-2 control-label">Descripción de la pregunta</label>
  <div class="col-sm-10">
    <textarea class="form-control" name="description" rows="3" required>{{description}}</textarea>
  </div>
</div>

{{#compare type.id '==' 1}}
  {{> templates/questions/seleccion_simple_tmpl}}
{{/compare}}
{{#compare type.id '==' 2}}
  {{> templates/questions/seleccion_tmpl}}
{{/compare}}
{{#compare type.id '==' 3}}
  {{> templates/questions/abierta_tmpl}}
{{/compare}}
{{#compare type.id '==' 5}}
  {{> templates/questions/verdadero_falso_tmpl}}
{{/compare}}

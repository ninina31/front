{{!empty QuestionviewTmpl template}}

<fieldset data-number="{{number}}">
  <legend>Pregunta {{number}}</legend>

  <div class="form-group">
    <label for="type-{{number}}" class="col-sm-2 control-label">Tipo de pregunta</label>
    <div class="col-sm-10">
      <select name="type-{{number}}" id="type-{{number}}" form="addQuiz" class="form-control" required>
        {{#each question_type}}
          <option value="{{id}}">{{description}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="score-{{number}}" class="col-sm-2 control-label">Puntuación de la pregunta</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="score-{{number}}" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="description-{{number}}" class="col-sm-2 control-label">Descripción de la pregunta</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="description-{{number}}" rows="3" required></textarea>
    </div>
  </div>

  <div class="selection">
    <div class="form-group text-center">
      <div class="col-sm-2 col-md-offset-10 control-label text-center">Marcar la opción que se desee correcta</div>
    </div>
    <div class="form-group">
      <label for="options-1-{{number}}" class="col-sm-2 control-label">Opción 1</label>
      <div class="col-sm-9">
        <input class="form-control" name="options-1-{{number}}" rows="3" required/>
      </div>
      <div class="col-sm-1 text-center">
        <input type="radio" value="1" name="autocorrect-is_correct">
      </div>
    </div>
    <div class="form-group">
      <label for="options-2-{{number}}" class="col-sm-2 control-label">Opción 2</label>
      <div class="col-sm-9">
        <input class="form-control" name="options-2-{{number}}" rows="3" required/>
      </div>
      <div class="col-sm-1 text-center">
        <input type="radio" value="2" name="autocorrect-is_correct">
      </div>
    </div>
    <div class="form-group">
      <label for="options-3-{{number}}" class="col-sm-2 control-label">Opción 3</label>
      <div class="col-sm-9">
        <input class="form-control" name="options-3-{{number}}" rows="3" required/>
      </div>
      <div class="col-sm-1 text-center">
        <input type="radio" value="3" name="autocorrect-is_correct">
      </div>
    </div>
    <div class="form-group">
      <label for="options-4-{{number}}" class="col-sm-2 control-label">Opción 4</label>
      <div class="col-sm-9">
        <input class="form-control" name="options-4-{{number}}" rows="3" required/>
      </div>
      <div class="col-sm-1 text-center">
        <input type="radio" value="4" name="autocorrect-is_correct">
      </div>
    </div>
  </div>

</fieldset>

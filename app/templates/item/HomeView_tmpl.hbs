{{!empty HomeviewTmpl template}}

<h4>Bienvenido al portal de exámenes MPWAR!</h4>

<div class="alert alert-success hidden" role="alert">El examen se ha creado exitosamente!</div>
<table class="table">
  <thead>
    <tr>
      <th>Nombre del examen</th>
      <th>¿Está activo?</th>
    </tr>
  </thead>
  {{#each tests}}
    <tr>
      <td><a href="#verExamen/{{id_test}}">{{name}}</a></td>
      <td>{{#if is_active}}Sí{{else}}No{{/if}}</td>
    </tr>
  {{/each}}
</table>

{{!empty CompanyviewTmpl template}}

<h3>Agregar Compañía</h3>
<div class="alert alert-success hidden" role="alert">La compañía se ha creado exitosamente!</div>
<div class="alert alert-danger hidden" role="alert">Hubo un error, intente de nuevo</div>
<form id="addCompany">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Nombre de la compañía</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="email" name="email">
    </div>
  </div>
  <button class="btn btn-default btn-success" id="saveCompany">Guardar Compañía</button>
</form>

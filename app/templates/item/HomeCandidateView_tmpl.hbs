{{!empty HomeviewTmpl template}}

<h4>Bienvenido al portal de exámenes MPWAR!</h4>

<div class="alert alert-success hidden" role="alert">El examen se ha creado exitosamente!</div>
<table class="table">
  <thead>
    <tr>
      <th class="text-center">Nombre del examen</th>
      <th class="text-center">Fecha de asignación</th>
    </tr>
  </thead>
  {{#each items}}
    <tr class="text-center">
      <td>{{name}}</td>
      <td class="text-center">{{created_at}}</td>
      <td><a class="btn btn-default btn-primary" href="#presentarExamen/{{id_test}}">Presentar el examen</a></td>
    </tr>
  {{/each}}
</table>
